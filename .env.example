# Application Secret Key (change in production!)
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=event_website

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_TEMPERATURE=0
OLLAMA_CONVERSATIONAL_TEMPERATURE=0.7

# Whisper Configuration
WHISPER_SERVER_URL=http://localhost:8080
WHISPER_TIMEOUT=60

# JWT/Auth Configuration
# Token expiration in minutes (default: 43200 = 30 days)
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Session Configuration
# Session max age in days (default: 30)
SESSION_MAX_AGE_DAYS=30
# Session cookie same-site policy: "lax", "strict", or "none"
SESSION_SAME_SITE=lax
# Set to true in production with HTTPS
SESSION_HTTPS_ONLY=false
